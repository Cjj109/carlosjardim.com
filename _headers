# Cloudflare Pages Headers - Optimización Ultra Rápida
# https://developers.cloudflare.com/pages/platform/headers/

# Headers globales para todos los archivos
/*
  # Seguridad
  X-Frame-Options: SAMEORIGIN
  X-Content-Type-Options: nosniff
  X-XSS-Protection: 1; mode=block
  Referrer-Policy: strict-origin-when-cross-origin
  Permissions-Policy: geolocation=(), microphone=(), camera=()

  # Performance
  X-DNS-Prefetch-Control: on

# HTML - Cache corto con stale-while-revalidate para mejor rendimiento
/*.html
  Cache-Control: public, max-age=300, stale-while-revalidate=3600
  Content-Type: text/html; charset=utf-8

/
  Cache-Control: public, max-age=300, stale-while-revalidate=3600
  Content-Type: text/html; charset=utf-8

# CSS - Cache agresivo (1 año) con revalidación
/css/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: text/css; charset=utf-8

# JavaScript - Cache agresivo (1 año) con revalidación
/js/*
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: application/javascript; charset=utf-8

# Fonts (si se agregan en el futuro)
/fonts/*
  Cache-Control: public, max-age=31536000, immutable
  Access-Control-Allow-Origin: *

# Imágenes (si se agregan en el futuro)
/*.jpg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.jpeg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/jpeg

/*.png
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/png

/*.webp
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/webp

/*.svg
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/svg+xml

/*.gif
  Cache-Control: public, max-age=31536000, immutable
  Content-Type: image/gif

# Favicon
/favicon.ico
  Cache-Control: public, max-age=86400
  Content-Type: image/x-icon

# Data files (JSON) - Cache corto para datos dinámicos como gym stats
/data/*
  Cache-Control: public, max-age=300, must-revalidate
  Content-Type: application/json; charset=utf-8
